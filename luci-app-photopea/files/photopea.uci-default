#!/bin/sh
[ ! -f "/usr/share/ucitrack/luci-app-photopea.json" ] && {
    cat > /usr/share/ucitrack/luci-app-photopea.json << EEOF
{
    "config": "photopea",
    "init": "photopea"
}
EEOF
}

uci -q batch <<-EOF >/dev/null
	delete ucitrack.@photopea[-1]
	add ucitrack photopea
	set ucitrack.@photopea[-1].init=photopea
	commit ucitrack
EOF

/etc/init.d/photopea enable

exit 0